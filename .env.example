# ========================================
# DJANGO CONFIGURATION
# ========================================
# Secret key para Django (cambiar en producción)
SECRET_KEY=django-insecure-rsxe1l+hu4%umgo#40u5r45ih1gymc19!t+sgop5xrdad_l6#i

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# ========================================
# GOOGLE GEMINI API (OBLIGATORIO)
# ========================================
# Esta API key es NECESARIA para que el chatbot funcione
# 
# CÓMO OBTENER TU API KEY:
# 1. Ir a: https://makersuite.google.com/app/apikey
# 2. Hacer clic en "Create API Key"
# 3. Copiar la key y pegarla abajo (reemplazar "tu_api_key_aqui")
#
# NOTA: La API de Gemini es GRATUITA para uso básico
GEMINI_API_KEY=tu_api_key_aqui

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Por defecto usa SQLite (no requiere configuración adicional)
# Para usar PostgreSQL en producción, descomentar las líneas abajo:
#
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=chatbot_db
# DB_USER=postgres
# DB_PASSWORD=tu_password_seguro
# DB_HOST=localhost
# DB_PORT=5432

# ========================================
# CORS CONFIGURATION
# ========================================
# URLs del frontend permitidas para hacer requests
# Agregar las URLs de tu frontend (desarrollo y producción)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

